FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY setup.py .
COPY data_service/ data_service/

# Sweep only needs these â€” fast install (~30s)
RUN pip install --no-cache-dir numba pandas numpy requests

# Create data directory for sweep output
RUN mkdir -p data/sweeps

ENTRYPOINT ["python", "-m", "data_service.backtest.strategy_sweep"]

FROM python:3.11-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY setup.py .
COPY data_service/ data_service/

# Sweep deps + matplotlib (pulled in by backtest __init__.py)
RUN pip install --no-cache-dir numba pandas numpy requests matplotlib

# Create data directory for sweep output
RUN mkdir -p data/sweeps

ENTRYPOINT ["python", "-m", "data_service.backtest.strategy_sweep"]
